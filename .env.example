# 애플리케이션 환경 설정
NODE_ENV=development
PORT=3000
API_PREFIX=api

# 로깅 설정
LOG_LEVEL=info
LOG_FILE_ENABLED=false
LOG_FILE_PATH=./logs

# CORS 설정
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting 설정
THROTTLE_TTL=60000
THROTTLE_LIMIT=10

# 데이터베이스 설정
DATABASE_TYPE=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=flexwork_dev
DATABASE_USER=flexwork
DATABASE_PASSWORD=flexwork_password
DATABASE_SYNCHRONIZE=true
DATABASE_LOGGING=false

# FDW (Foreign Data Wrapper) 설정 - AUTR 원격 PostgreSQL 데이터베이스
# FDW 활성화 여부 (true/false)
AUTR_FDW_ENABLED=true
# FDW 서버 이름 (PostgreSQL 내부에서 사용)
AUTR_FDW_SERVER_NAME=autr_server
# Foreign Table이 생성될 로컬 스키마 이름
AUTR_FDW_LOCAL_SCHEMA=autr
# 원격 데이터베이스 연결 정보
AUTR_DATABASE_HOST=localhost
AUTR_DATABASE_PORT=5432
AUTR_DATABASE_NAME=autr_db
AUTR_DATABASE_USER=postgres
AUTR_DATABASE_PASSWORD=your_password_here

# 인증 서비스 설정
AUTH_SERVICE_URL=https://auth.example.com